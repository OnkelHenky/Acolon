{
  "author": "Alexander Henka",
  "manifest_version": 2,

  "name": "Acolon",
  "description": "Barrier simulation for the web",
  "version": "0.1",
  "icons": { "16": "icon.png",
             "48": "icon.png",
            "128": "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  "content_scripts": [ {
    "js": ["src/injector.js","src/libs/jquery-3.1.1.min.js"],
    "matches": [ "http://*/*", "https://*/*"]
  }]
}
